{
  "Comment": {
    "line1": "K halved, num_layers halved.",
    "line2": ""
  },
  "Dir": {
    "data_root": "data/GENEA/processed",
    "log_root": "results/GENEA/expe_model"
  },
  "Glow": {
    "hidden_channels": 512,
    "K": 8,
    "actnorm_scale": 1.0,
    "flow_permutation": "invconv",
    "flow_coupling": "affine",
    "network_model": "LSTM",
    "num_layers": 1,
    "LU_decomposed": true,
    "distribution": "normal"
  },
  "Data": {
    "framerate": 20,
    "seqlen": 5,
    "n_lookahead": 20,
    "dropout": 0.4
  },
  "Optim": {
    "name": "adam",
    "args": {
      "lr": 0.0015,
      "betas": [
        0.9,
        0.999
      ],
      "eps": 1e-08
    },
    "Schedule": {
      "name": "noam_learning_rate_decay",
      "args": {
        "warmup_steps": 3000,
        "minimum": 0.00015
      }
    }
  },
  "Device": {
    "glow": [
      "cuda:0"
    ],
    "data": "cuda:0"
  },
  "Train": {
    "batch_size": 10,
    "num_batches": 80000,
    "max_grad_clip": 5,
    "max_grad_norm": 100,
    "max_checkpoints": 4,
    "checkpoints_gap": 40000,
    "num_plot_samples": 1,
    "scalar_log_gap": 50,
    "validation_log_gap": 500,
    "plot_gap": 20000,
    "warm_start": ""
  },
  "Temp": {
    "use_train_subset": true,
    "subset_size": 10

  "Infer": {
    "pre_trained": ""
  }
}
